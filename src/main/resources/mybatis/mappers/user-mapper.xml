<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mappers.UserMapper">

    <select id="user_login" resultType="User" parameterType="User">
        SELECT * FROM `user`
        WHERE id = #{id} AND pw = #{pw}
    </select>

    <select id="user_select" resultType="User" parameterType="User">
        SELECT * FROM `user`
        WHERE id = #{id}
    </select>


    <insert id="user_register" parameterType="User">
        INSERT INTO `user` VALUES (NULL, #{id}, #{pw})
    </insert>


